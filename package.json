{
  "name": "r-magnet",
  "version": "1.0.0-dev1",
  "description": "A state management library for React",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "umd:main": "dist/index.umd.production.min.js",
  "unpkg": "dist/index.umd.production.min.js",
  "jsdelivr": "dist/index.umd.production.min.js",
  "jsnext:main": "dist/index.esm.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "sideEffects": true,
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "yarn clean && node scripts/rollup/writeCjsEntryFile.js && yarn build:modern && yarn cp:dts",
    "build:modern": "rollup -c ./scripts/rollup/rollup.config.js",
    "build:esm": "rollup -c ./scripts/rollup/rollup.esm.config.js",
    "build:ie11": "rollup -c ./scripts/rollup/rollup.ie11.config.js",
    "cp:dts": "copyfiles -f ./src/**/*.d.ts dist && rimraf dist/**/*.test.d.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/changelog-github": "^0.2.6",
    "@changesets/cli": "^2.11.2",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@skypack/package-check": "^0.2.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.25",
    "babel-jest": "^26.6.3",
    "bundlesize": "^0.18.0",
    "copyfiles": "^2.3.0",
    "core-js": "^3.7.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JUkhan/magnet.git"
  },
  "keywords": [
    "redux",
    "Orbit",
    "redux-toolkit",
    "magnet"
  ],
  "author": "JUkhan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JUkhan/magnet/issues"
  },
  "homepage": "https://github.com/JUkhan/magnet#readme"
}
